<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialog_margin_parent"
    android:layout_marginRight="@dimen/dialog_margin_parent"
    android:background="@drawable/default_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:gravity="center"
        android:text="请选择您所在的阵营"
        android:textColor="#44b600"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/default_devide_line" />

    <LinearLayout
        android:id="@+id/llt_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dialog_item_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_qihoo"
                style="@style/dialog_text_style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/title_qihoo"
                android:gravity="center"
                android:text="@string/btn_qihoo" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/btn_baidu"
                style="@style/dialog_text_style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/title_baidu"
                android:gravity="center"
                android:text="@string/btn_baidu" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="center_horizontal"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dialog_item_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_tencent"
                style="@style/dialog_text_style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/title_tencent"
                android:gravity="center"
                android:text="@string/btn_tencent" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/btn_taobao"
                style="@style/dialog_text_style"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/title_alibaba"
                android:gravity="center"
                android:text="@string/btn_taobao" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/default_devide_line" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:gravity="center"
        android:text="阵营选择后不可更改，请按真实情况选择"
        android:textColor="@color/black"
        android:textSize="15sp" />

</LinearLayout>