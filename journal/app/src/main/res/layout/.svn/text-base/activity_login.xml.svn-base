<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical" >
	<include 
	    android:id="@+id/login_title_bar"
	    layout="@layout/title_bar"/>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/qihoo_icon" />

    <LinearLayout
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:layout_marginTop="30.0dip"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_username"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:drawableLeft="@drawable/icon_name"
            android:drawablePadding="5dp"
            android:hint="@string/username_input"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="16"
            android:paddingLeft="12.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:textSize="16.0sp" />
        <!-- android:maxLength="16" -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:background="#00ffffff"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="@string/password_input"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="16"
            android:paddingLeft="12.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:textSize="16.0sp" />
        <!-- android:maxLength="16" -->
         <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:layout_marginTop="38.0dip"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="#ffffff"
        android:textSize="18.0sp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:layout_marginTop="30.0dip"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/text_anynom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="@string/anymon_login"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/text_regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="@string/regis"
            android:gravity="center_horizontal" />
    </LinearLayout>
    </LinearLayout>   
</ScrollView>
</LinearLayout>