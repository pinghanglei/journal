<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:layout_width="match_parent"      
        android:layout_height="49dip"
        android:id="@+id/rlt_title_bar" 
        android:background="@drawable/titlebar">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/back_main"
            android:textSize="14sp"
            android:background="@drawable/selector_titilebar_btn_bg"/> 


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="@string/want_rotast"
            android:textSize="18sp"
            android:background="@drawable/selector_titilebar_btn_bg"
            /> 

		
        
         <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/submit_rotast"
            android:background="@drawable/selector_titilebar_btn_bg"
            android:textSize="14sp" />

    </RelativeLayout>
    
    <View
        android:id="@+id/view_shadow"
        android:layout_width="fill_parent"
        android:layout_height="4dip"
        android:layout_below="@id/rlt_title_bar"/>
        
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_below="@id/view_shadow"
        android:background="@drawable/bottom">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:focusable="true"            
            android:hint="@string/rotast_tishi" 
            android:maxLength="400"
            
            android:scrollbars="vertical"
            android:textColor="#474747"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            
            android:paddingBottom="47dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="16.5dip"
            android:paddingTop="14.5dip"           
            android:textSize="15sp"/>        

   
        <ImageView
        	android:id="@+id/img_load"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentBottom="true"
        	android:layout_marginLeft="18dip"
        	android:layout_marginBottom="15.0dip"
        	android:src="@drawable/selector_btn_image" />
        
         <ImageView
            android:id="@+id/img_preview"
            android:layout_width="42dip"
            android:layout_height="42dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:visibility="gone" />
        
 
        
	   </RelativeLayout>
	   
</RelativeLayout>

