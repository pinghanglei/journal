<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@color/bg_top_bar" >

    <LinearLayout
        android:id="@+id/id_plugin_header_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/selector_slide_menu_item"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/id_header_left_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:contentDescription="@string/head_left_imageview_descript"
            android:src="@drawable/img_plugin_header_back_btn_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_plugin_header_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text_light_gray"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_size_title" />

    <ImageView
        android:id="@+id/id_plugin_header_iv_btn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/id_plugin_header_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_slide_menu_item" >

        <TextView
            android:id="@+id/id_plugin_header_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
    </LinearLayout>

    <View
        style="@style/list_item_divider_style"
        android:layout_alignParentBottom="true" />

</RelativeLayout>