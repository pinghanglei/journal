<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black" >
    
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="fill_parent"
        android:layout_height="49dip"
        android:background="@drawable/popup_menu_title_bar"
        android:gravity="center"
        android:text="@string/select_picture_menu"
        android:textColor="#44b600"
        android:textSize="18sp" />

    <View
        android:id="@+id/txt_shadow"
        android:layout_width="fill_parent"
        android:layout_height="8dip"
        android:background="@drawable/popup_menu_title_shadow" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="fill_parent"
        android:layout_height="57.5dip"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/selector_btn_popup_menu_white_btn"
        android:padding="5dip"
        android:text="@string/menu_camera"
        android:textColor="#828282"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="fill_parent"
        android:layout_height="57.5dip"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/selector_btn_popup_menu_white_btn"
        android:padding="5dip"
        android:text="@string/menu_gallery"
        android:textColor="#828282"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="fill_parent"
        android:layout_height="57.5dip"
        android:layout_marginBottom="5.5dip"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/selector_btn_popup_menu_gray_btn"
        android:padding="5dip"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
