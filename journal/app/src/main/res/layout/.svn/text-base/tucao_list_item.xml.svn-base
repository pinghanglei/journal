<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_medium"
    android:paddingRight="@dimen/padding_medium"
    android:paddingTop="@dimen/padding_medium" >

    <LinearLayout
        android:id="@+id/item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_hot_item_bg"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/avatar_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/image_zhanwei_bg"
                android:contentDescription="@string/contentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="@dimen/padding_medium"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="49分钟前"
                    android:textColor="@color/lightgray_text_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_medium"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tucao_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_medium"
                android:textColor="@color/default_text_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/tucao_img"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/padding_medium"
                android:background="@color/image_zhanwei_bg"
                android:contentDescription="@string/contentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:background="#FAFAFA"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/zan_wrapper"
                android:layout_width="0dip"
                android:layout_height="@dimen/default_zan_height"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/selector_titilebar_btn_bg"
                    android:drawableLeft="@drawable/icon_neirong_zan"
                    android:drawablePadding="@dimen/padding_medium"
                    android:gravity="center_vertical"
                    android:text="232"
                    android:textColor="@color/lightgray_text_color" />
            </RelativeLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="@dimen/default_zan_height"
                android:background="@drawable/vertical_line" >
            </View>

            <RelativeLayout
                android:id="@+id/comment_wrapper"
                android:layout_width="0dip"
                android:layout_height="@dimen/default_zan_height"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/icon_neirong_pinglun"
                    android:drawablePadding="@dimen/padding_medium"
                    android:gravity="center_vertical"
                    android:text="157"
                    android:textColor="@color/lightgray_text_color" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>